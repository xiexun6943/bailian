<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_bottom_menu"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:orientation="horizontal"
              android:padding="10dp">


    <ImageView
        android:id="@+id/send_message"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_circle_black30"
        android:padding="7dp"
        android:src="@drawable/icon_send_message"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/swCam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black30"
            android:padding="7dp"
            android:src="@drawable/change_camera"/>

        <ImageView
            android:id="@+id/skinWhite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black30"
            android:padding="7dp"
            android:src="@drawable/skin_whit"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_circle_black30"
            android:padding="7dp"
            android:src="@drawable/icon_share"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_black30"
            android:padding="7dp"
            android:src="@drawable/icon_close"/>
    </LinearLayout>
</LinearLayout>